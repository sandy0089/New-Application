<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sandy.newapplication.MainActivity">

    <TextView
        android:id="@+id/txtHdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtHdr"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/small"
        />

    <Button
        android:id="@+id/btnOkay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHdr"
        android:text="@string/btnOkay"/>

    <TextView
        android:id="@+id/txtBtm"
        android:text="Android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/myStyle"
        android:layout_below="@id/btnOkay"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtBtm"
        android:entries="@array/cities"/>

</RelativeLayout>
